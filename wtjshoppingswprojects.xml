<?xml version="1.0"?>
<extension type="plugin" version="3.5" method="upgrade" group="jshoppingorder">
    <name>Jshoppingorder - WT Jshopping SW Projects</name>
    <author>Sergey Tolkachyov</author>
    <authorEmail>info@web-tolk.ru</authorEmail>
    <authorUrl>https://web-tolk.ru/</authorUrl>
	<creationDate>30/11/2020</creationDate>
    <copyright>Sergey Tolkachyov</copyright>
    <license>GNU GPL 3.0</license>
    <version>1.0.0</version>
    <description>Shows SW Projects update key in JoomShopping single order view. Autogenerate keys for SW Projects projects. Create product characteristic first for SW Projects project_id</description>
    <files>
        <filename plugin="wtjshoppingswprojects">wtjshoppingswprojects.php</filename>
        <folder>fields</folder>
        <filename>index.html</filename>
    </files>
    <config>
        <fields name="params">
            <fieldset name="basic">
                    <field type="list" name="order_view_tmp_var" label="Позиция в виде заказа" description="Страница просмотра одного заказа">
                        <option value="_ext_attribute_html">_ext_attribute_html</option>
                        <option value="_ext_file_html">_ext_file_html</option>
                        <option value="_ext_price_html">_ext_price_html</option>
                    </field>
                <field addfieldpath="plugins/jshoppingorder/wtjshoppingswprojects/fields" type="jshoppingextrafields"  name="jshopping_extra_field_id" label="Id характеристики для Id проекта SW Projects">
                    <option value=""/>
                </field>
                <field name="show_note_in_order"  type="radio" label="Показывать примечание в заказе?" class="btn-group btn-group-yesno" default="0">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field name="show_key_info_on_checkout_finish"  type="radio" label="Показывать ключ и ссылку на скачивание на странице завершения заказа JoomShopping?" class="btn-group btn-group-yesno" default="0">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
            </fieldset>
        </fields>
    </config>
    <updateservers>
        <server type="extension" name="WebTolk Update Server">https://web-tolk.ru/component/swjprojects/jupdate.html?element=plg_wtjshoppingswprojects</server>
    </updateservers>
</extension>